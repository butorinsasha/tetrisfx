<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<HBox style="-fx-background-color: #272727;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Canvas fx:id="gameCanvas" height="444.0" width="222.0"/>
        <VBox prefHeight="200.0" prefWidth="138.0">
            <children>
                <Pane prefHeight="151.0" prefWidth="138.0" style="-fx-background-color: #393939;">
                    <children>
                        <Label layoutX="14.0" layoutY="6.0" text="SCORE" textFill="WHITE"/>
                        <Label fx:id="lblScore" alignment="CENTER_RIGHT" graphicTextGap="0.0" layoutX="13.0"
                               layoutY="30.0" prefHeight="28.0" prefWidth="112.0" textAlignment="RIGHT"
                               textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                        <Label layoutX="11.0" layoutY="70.0" text="HI-SCORE" textFill="WHITE"/>
                        <Label fx:id="lblHiScore" alignment="CENTER_RIGHT" graphicTextGap="0.0" layoutX="12.0"
                               layoutY="93.0" prefHeight="28.0" prefWidth="112.0" textAlignment="RIGHT"
                               textFill="WHITE">
                            <font>
                                <Font size="24.0"/>
                            </font>
                        </Label>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Pane>
                <Pane style="-fx-background-color: #393939;">
                    <children>
                        <Canvas fx:id="nextShapeCanvas" height="94.0" layoutY="28.0" width="138.0"/>
                        <Label layoutX="14.0" layoutY="6.0" text="NEXT" textFill="WHITE"/>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                </Pane>
                <Pane prefHeight="127.0" prefWidth="138.0" style="-fx-background-color: #393939;">
                    <VBox.margin>
                        <Insets top="10.0"/>
                    </VBox.margin>
                    <children>
                        <Label fx:id="btnPauseGame" alignment="CENTER" layoutX="18.0" layoutY="19.0" prefHeight="25.0"
                               prefWidth="99.0" styleClass="btn" text="PAUSE" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="btnNewGame" alignment="CENTER" layoutX="18.0" layoutY="43.0" styleClass="btn"
                               text="NEW GAME" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="btnStopGame" alignment="CENTER" layoutX="18.0" layoutY="62.0" prefHeight="23.0"
                               prefWidth="99.0" styleClass="btn" text="STOP" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="btnSaveScore" alignment="CENTER" layoutX="11.0" layoutY="81.0" styleClass="btn"
                               text="SAVE SCORE" textFill="WHITE">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </Pane>
            </children>
        </VBox>
    </children>
</HBox>
